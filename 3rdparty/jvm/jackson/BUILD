VERSION = '2.4.4'

jar_library(
    name='jackson',
    jars=[
        jar('com.fasterxml.jackson.core', 'jackson-core', VERSION),
        jar('com.fasterxml.jackson.core', 'jackson-annotations', VERSION),
    ]
)

jar_library(
    name='scala',
    jars=[scala_jar('com.fasterxml.jackson.module', 'jackson-module-scala', VERSION)]
)

jar_library(
    name='joda',
    jars=[jar('com.fasterxml.jackson.datatype', 'jackson-datatype-joda', VERSION)]
)
